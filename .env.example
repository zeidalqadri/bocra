# BOCRA Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://bocra:your_secure_postgres_password_here@postgres:5432/bocra

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# Security Keys (IMPORTANT: Change these in production!)
BOCRA_SECRET_KEY=your-very-secure-secret-key-32-characters-min
BOCRA_STORAGE_KEY=your-very-secure-storage-encryption-key
BOCRA_IP_SALT=your-secure-ip-hashing-salt

# Frontend Configuration
FRONTEND_URLS=http://localhost:3000,https://*.pages.dev,https://your-domain.com

# Session Configuration
SESSION_DURATION_HOURS=24

# Quota and Limits
MAX_DOCUMENTS_PER_IP=1000
MAX_STORAGE_BYTES_PER_IP=10737418240  # 10GB
MAX_FILE_SIZE_BYTES=104857600         # 100MB

# Storage Configuration
STORAGE_PATH=/var/lib/bocra/storage

# Server Configuration (for direct deployment)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
WORKERS=1

# SSL Configuration (optional)
SSL_CERT_PATH=/etc/ssl/certs/bocra.crt
SSL_KEY_PATH=/etc/ssl/private/bocra.key

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/bocra/app.log

# External Services (optional)
# SENTRY_DSN=https://your-sentry-dsn
# PROMETHEUS_PORT=9090